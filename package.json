{
  "name": "FCCTrackerAPI",
  "description": "API for the Free Code Camp Tracker apps",
  "author": "Nathan Bunney",
  "license": "MIT",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ValleyWorx/fcc-tracker-node-koa.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 app.js",
    "start-dev": "nodemon -e js,json,html app.js",
    "start-devtools": "nodemon --inspect -e js,json,html app.js",
    "test": "mocha test/admin.js test/api.js",
    "lint": "eslint --ignore-pattern app-api/apidoc .",
    "apidoc": "apidoc -i app-api -o app-api/apidoc/apidoc"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "child-process-promise": "^2.2.0",
    "debug": "^2.6.9",
    "dotenv": "^4.0.0",
    "forever": "^0.15.3",
    "htmlparser": "^1.7.7",
    "jsdom": "^9.11.0",
    "jsonwebtoken": "^7.4.3",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-bunyan": "^1.0.1",
    "koa-compose": "^3.2.1",
    "koa-compress": "^2.0.0",
    "koa-lusca": "^2.2.0",
    "koa-router": "^7.3.0",
    "koa2-cors": "^2.0.5",
    "markdown-it": "^8.4.0",
    "moment": "^2.20.1",
    "mysql2": "^1.5.1",
    "mz": "^2.7.0",
    "node-fetch": "^1.7.3",
    "puppeteer": "^1.5.0",
    "randomstring": "^1.1.5",
    "scrypt": "^6.0.3"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "chai": "^3.5.0",
    "eslint": "^3.16.1",
    "mocha": "^3.5.3",
    "nodemon": "^1.14.11",
    "npm-check": "^5.5.2",
    "npm-check-updates": "^2.14.0",
    "supertest": "^3.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "extends": "eslint:recommended",
    "rules": {
      "array-bracket-spacing": [
        "error",
        "always",
        {
          "singleValue": false
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": [
        "error",
        {
          "align": "value"
        }
      ],
      "no-case-declarations": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "error",
            "info"
          ]
        }
      ],
      "no-redeclare": "warn",
      "no-shadow": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-const": "error",
      "quotes": [
        "error",
        "single",
        "avoid-escape"
      ],
      "require-await": "error",
      "semi": [
        "error",
        "always"
      ],
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
